<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="REQUEST PERMISSIONS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_request"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="92dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="116dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="116dp"/>
    <Button
            android:text="CAMERA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_camera"
            app:layout_constraintStart_toStartOf="@+id/btn_request"
            app:layout_constraintEnd_toEndOf="@+id/btn_request" android:layout_marginTop="77dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_request"/>
    <Button
            android:text="OPEN FILE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_file"
            app:layout_constraintStart_toStartOf="@+id/btn_camera" app:layout_constraintEnd_toEndOf="@+id/btn_camera"
            android:layout_marginTop="111dp" app:layout_constraintTop_toBottomOf="@+id/btn_camera"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_read_data"
            app:layout_constraintStart_toStartOf="@+id/btn_file"
            android:layout_marginTop="74dp" android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_file"/>
</android.support.constraint.ConstraintLayout>